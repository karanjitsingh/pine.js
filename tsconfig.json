{
    "compilerOptions": {
        "outDir": "./out",
        "module": "amd",
        "sourceMap": true,
        "removeComments": true,
        "target": "es2018",
        "lib": ["es2016", "dom"],
        "baseUrl": "./src",
        "paths": {
            "Model/*": [ "./Model/*" ],
            "Network/*": [ "./Network/*" ],
            "Exchange/*": [ "./Exchange/*" ],
            "Platform/*": [ "./Platform/*" ]
        },
        "jsx": "react",
        "moduleResolution": "node",
    },
    "include": [
        "**/*.ts", "**/*.tsx", "Platform/Browser/lib/react-split.jsx"
    ],
    "exclude": [
        "./bin/*"
    ],
    "compileOnSave": true,
}
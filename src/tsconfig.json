{
    "compilerOptions": {
        "outDir": "../out/",
        "sourceMap": true,
        "target": "es2018",
        "lib": ["es2018"],
        "baseUrl": "./",
        "paths": {
            "Model/*": [ "./Model/*" ],
            "Network/*": [ "./Network/*" ],
            "Exchange/*": [ "./Exchange/*" ],
            "Platform/*": [ "./Platform/*" ]
        },
        "moduleResolution": "node",
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "./Reporters/*"
    ],
    "compileOnSave": true,
}
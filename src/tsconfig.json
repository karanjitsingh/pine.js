{
    "compilerOptions": {
        "outDir": "../out/",
        "sourceMap": true,
        "module": "commonjs",
        "target": "es2015",
        "lib": ["es2015"],
        "baseUrl": "./",
        "paths": {
            "Model/*": [ "./Model/*" ],
            "Network/*": [ "./Network/*" ],
            "Exchange/*": [ "./Exchange/*" ],
            "Platform/*": [ "./Platform/*" ],
            "Server/*": [ "./Server/*" ]
        },
        "types": ["node", "ws", "./globals"],
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "strictNullChecks": true,
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "./Reporters/**/*"
    ],
    "compileOnSave": true,
}